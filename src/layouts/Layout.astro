---
import Header from "../components/Header.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="cursor-nasaDefault">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="cursor-nasaDefault">
		<slot />
	</body>
	<style is:global>
		/* Register your custom font family and tell the browser where to find it. */
		@font-face {
			font-family: "Mona";
			src: url("/fonts/Mona-Sans.woff2");
			font-weight: normal;
			font-style: normal;
			font-display: swap;
		}

		@font-face {
			font-family: "Nasa";
			src: url("/fonts/Nasa.ttf");
			font-weight: normal;
			font-style: normal;
			font-display: swap;
		}
	</style>
</html>
